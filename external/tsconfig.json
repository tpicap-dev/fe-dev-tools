{
  "compilerOptions": {
    "target": "es6",
    "module": "ES2020",
    "strict": false,
    "baseUrl": "../",
    "types": ["node"],
    "lib": ["dom", "dom.iterable", "ESNext"],
    "noImplicitThis": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
//    "allowImportingTsExtensions": false,
    "outDir": "./dist",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "paths": {
      "ramda": ["../node_modules/ramda"]
    },
    "moduleResolution": "node",
    "jsx": "react"
  },
  "include": ["./index.ts","./*.ts","**/newcommon/*"],
  "exclude": [
    "../node_modules/**/*","**/node_modules/**/*"
  ]
}